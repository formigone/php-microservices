{% for story in stories %}
    <div class="row queue-item">
        <div class="col-xs-6 col-lg-4">
            <img src="{{ story.img }}" class="img-responsive" />
        </div>
        <div class="col-xs-6 col-lg-8">
            <h2 class="title">
                <a href="/read/{{ story.id }}/{{ story.slug }}">{{ story.title }}</a>
            </h2>
            <p class="text-muted">{{ story.date|date('l j, g:m a') }}</p>
            <p>{{ story.summary }}</p>
        </div>
    </div>
{% endfor %}
