<h3>{{ title }}</h3>
<div class="list-group">
    {% for story in stories %}
    <div class="list-group-item">
        <div class="media">
            <div class="media-left">
                <a href="/read/{{ story.id }}/{{ story.slug }}">
                    <img class="media-object" src="{{ story.img }}" width="64">
                </a>
            </div>
            <div class="media-body">
                <h5 class="media-heading">{{ story.title }}</h5>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
