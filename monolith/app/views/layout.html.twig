<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Formigone News</title>

    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/app.css" rel="stylesheet">
</head>

<body>
<nav class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">
                <img src="/img/logo.png" class="company-logo" />
            </a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">Home</a></li>
                <li><a href="#about">About</a></li>
                <li><a href="#contact">Contact</a></li>
            </ul>
        </div><!-- /.nav-collapse -->
    </div><!-- /.container -->
</nav><!-- /.navbar -->

<div class="container">

    <div class="row row-offcanvas row-offcanvas-right">

        <div class="col-xs-12 col-sm-9">
            <p class="pull-right visible-xs">
                <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
            </p>
            <div class="jumbotron top-article" style="background-image: url(/img/cat-001.jpg);">
                <h1 class="title">Weird cat video goes viral online</h1>
                <span class="breaking">Breaking news</span>
            </div>

            {% for item in headlines %}
            <div class="row queue-item">
                <div class="col-xs-6 col-lg-4">
                    <img src="{{ item.img }}" class="img-responsive"/>
                </div>
                <div class="col-xs-6 col-lg-8">
                    <h2 class="title">{{ item.title }}</h2>
                    <p class="text-muted">{{ item.date|date('l j, g:m a') }}</p>
                    <p>{{ item.summary }}</p>
                </div><!--/.col-xs-6.col-lg-4-->
            </div><!--/row-->
            {% endfor %}
        </div><!--/.col-xs-12.col-sm-9-->

        <div class="col-xs-6 col-sm-3 sidebar-offcanvas">
            <h3>Trending Stories</h3>
            <div class="list-group">
                <div class="list-group-item">
                    <div class="media">
                        <div class="media-left">
                            <a href="#">
                                <img class="media-object" src="/img/wikipedia.jpg" width="64">
                            </a>
                        </div>
                        <div class="media-body">
                            <h5 class="media-heading">People share knowledge online</h5>
                        </div>
                    </div>
                </div>
                <div class="list-group-item">
                    <div class="media">
                        <div class="media-left">
                            <a href="#">
                                <img class="media-object" src="/img/moon.jpg" width="64">
                            </a>
                        </div>
                        <div class="media-body">
                            <h5 class="media-heading">Planet found in the universe - with moon</h5>
                        </div>
                    </div>
                </div>
                <div class="list-group-item">
                    <div class="media">
                        <div class="media-left">
                            <a href="#">
                                <img class="media-object" src="/img/fireworks.jpg" width="64">
                            </a>
                        </div>
                        <div class="media-body">
                            <h5 class="media-heading">Fireworks used in celebration of something</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/.sidebar-offcanvas-->
    </div><!--/row-->

    <hr>

    <footer>
        <p>&copy; 2016 Company, Inc.</p>
    </footer>

</div><!--/.container-->

<script>
  setTimeout(function () {
    document.querySelector('.top-article').classList.add('on');
  }, 0);
</script>
</body>
</html>
